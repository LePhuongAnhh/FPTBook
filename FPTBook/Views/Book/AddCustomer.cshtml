@model FPTBook.Models.Customer
@{
    Layout = "Homepage";
}

<form method="post" asp-controller="Book" asp-action="AddCustomer">
    <h2 class="cangiua gachchan text-center">Add Customer Info</h2>
   
        <input hidden class="form-control" asp-for="@Model.Id"  />
       

    <div class="form-group">
        <label class="h4 text-success" asp-for="@Model.CId">Customer's ID</label>
        <input class="form-control" asp-for="@Model.CId" />
        <span class="text-danger" asp-validation-for="@Model.CId"></span>
    </div>
    <div class="form-group">
        <label class="h4 text-success">Full Name</label>
        <input class="form-control" asp-for="@Model.CName" />
        <span class="text-danger" asp-validation-for="@Model.CName"></span>
    </div>
    <div class="form-group">
        <label class="h4 text-success" asp-for="@Model.CEmail">Customer's Email</label>
        <input class="form-control" asp-for="@Model.CEmail" />
        <span class="text-danger" asp-validation-for="@Model.CEmail"></span>
    </div>
    <div class="form-group">
        <label class="h4 text-success" asp-for="@Model.CPhone">Customer's Phone</label>
        <input class="form-control" asp-for="@Model.CPhone" />
        <span class="text-danger" asp-validation-for="@Model.CPhone"></span>
    </div>
    <div class="form-group">
        <label class="h4 text-success" asp-for="@Model.CBirthday">Date of Birth</label>
        <input class="form-control" asp-for="@Model.CBirthday" />
        <span class="text-danger" asp-validation-for="@Model.CBirthday"></span>
    </div>
    <div class="form-group">
        <label class="h4 text-success" asp-for="@Model.CAddress">Customer's Address</label>
        <input class="form-control" asp-for="@Model.CAddress" />
        <span class="text-danger" asp-validation-for="@Model.CAddress"></span>
    </div>
    <div class="form-group">
        <label class="h4 text-success" asp-for="@Model.CUsername">Username </label><br>
        <input class="form-control mt-3" asp-for="@Model.CUsername" />
        <span class="text-danger" asp-validation-for="@Model.CUsername"></span>
    </div>
        <div class="form-group">
        <label class="h4 text-success" asp-for="@Model.CGender"></label><br />
        Male <input type="radio" name="CGender" value='M'/>
        Female <input type="radio" name="CGender" value='F' />
        Other <input type="radio" name="CGender" value='O' />
    </div>
    <div class="form-group">
        <label class="h4 text-success" asp-for="@Model.CAvatar">Customer's Avatar</label><br>
       
        <input class="form-control mt-3" asp-for="@Model.CAvatar" />
        <span class="text-danger" asp-validation-for="@Model.CAvatar"></span>
    </div>
    
    <div class="form-group">
        <a class="btn btn-success" asp-controller="Book" asp-action="AddCustomer">
            Back
        </a>
        <input type="submit" class="btn btn-warning" value="Add" />       
    </div>
</form>

